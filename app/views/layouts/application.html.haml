!!!html
%html
  %head
    %title Tomato Soup
    = stylesheet_link_tag 'application'
    = javascript_include_tag "application"
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          = link_to "Tomato Soup", root_path 
        #user-navigation
          %ul.wat-cf
            - if current_user
              %li= link_to 'Logout', logout_path
            - else
              %li= link_to 'Login', login_path
              %li= link_to 'Register', register_path
        #main-navigation
          %ul.wat-cf
            - if current_user
              %li= link_to 'My Projects', projects_path
              %li= link_to 'Stats', stats_path
              %li= link_to 'Profile', profile_path
        
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p Copyright &copy;
        #sidebar
          = yield :sidebar