.block
  .secondary-navigation
    %ul.wat-cf
      %li.first
        = link_to "List", projects_path
      %li
        = link_to "New", new_project_path
      %li.active
        = link_to "Show", project_path
  .content
    .inner
      %p
        = @project.name
      %p
        = @project.description
      .wat-cf
        = link_to "Edit", edit_project_path(@project), :class => "button"
        = link_to "Delete", project_path(@project), :method => "delete", :class => "button", :confirm => "Are you sure?"

- content_for :sidebar, render(:partial => 'sidebar')