%h1 Registration

= form_for @user do |f|
  - if @user.errors.any?
    .error_messages
      %h2 The following errors occured:
      %ul
        - for message in @user.errors.full_messages
          %li
            = message
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .actions
    = f.submit 'Register'
